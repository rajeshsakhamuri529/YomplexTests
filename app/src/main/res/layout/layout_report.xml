<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_root"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_350sdp">
<RelativeLayout
    android:id="@+id/solution"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="visible"
    android:background="#FFFFFF">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >

        <TextView
            android:id="@+id/tv_solution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_14ssp"
            android:text="Report Issue"
            android:textColor="#424242"
            android:layout_marginTop="@dimen/_15sdp"
            android:fontFamily="@font/lato_bold"
            android:layout_centerHorizontal="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:id="@+id/view5"
            android:visibility="gone"
            android:background="@color/hint_title_text"
            android:layout_below="@id/tv_solution"
            android:layout_marginTop="@dimen/_15sdp"
            />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_solution"
            android:layout_above="@+id/btnRL"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_15sdp">


            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp">

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/radioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="Error in the problem"
                    android:textColor="#424242"
                    android:fontFamily="@font/lato_regular"
                    android:button="@drawable/selector_radio"
                    android:textSize="16dp" />
                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/radioButton1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="Spelling mistake"
                    android:textColor="#424242"
                    android:fontFamily="@font/lato_regular"
                    android:button="@drawable/selector_radio"
                    android:textSize="16dp" />
                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="Other"
                    android:textColor="#424242"
                    android:fontFamily="@font/lato_regular"
                    android:button="@drawable/selector_radio"
                    android:textSize="16dp" />


            </RadioGroup>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/radioGroup"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@drawable/inactive_answer_overlay">

                <EditText
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:inputType="textMultiLine"
                    android:lines="8"
                    android:textSize="@dimen/_14sdp"
                    android:hint="Additional Information"
                    android:minLines="6"
                    android:paddingLeft="@dimen/_2sdp"
                    android:textColor="#424242"
                    android:fontFamily="@font/lato_regular"
                    android:background="@color/answer_bg_inactive"
                    android:textColorHint="#c0c0c0"
                    android:gravity="top|left"
                    android:maxLines="10"
                    android:scrollbars="vertical"/>



            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_hint_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:visibility="visible"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_10sdp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_25sdp"
                    android:id="@+id/btn_cancel"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:textSize="@dimen/_11sdp"
                    android:letterSpacing="0.1"
                    android:layout_alignParentStart="true"
                    android:fontFamily="@font/lato_bold"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:background="@drawable/prev_next_active_btn"
                    android:text="Cancel"
                    android:layout_centerVertical="true"
                    android:textColor="#424242"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:orientation="horizontal"
                        android:layout_alignParentEnd="true"
                        android:visibility="visible"

                        android:layout_centerVertical="true">

                        <Button
                            android:id="@+id/submit_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_alignParentStart="true"
                            android:fontFamily="@font/lato_bold"
                            android:background="@drawable/submit_active_background"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:text="Submit"
                            android:paddingLeft="@dimen/_15sdp"
                            android:paddingRight="@dimen/_15sdp"
                            android:textSize="@dimen/_11sdp"
                            android:letterSpacing="0.1"
                            android:layout_centerVertical="true"
                            android:textColor="@color/white"
                            />

                    </LinearLayout>



            </RelativeLayout>



        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/btnRL"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:visibility="gone">
            <Button android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_centerInParent="true"
                android:id="@+id/close"



                android:background="@drawable/submit_active_background"
                android:text="OK"

                android:letterSpacing="0.1"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:textColor="@color/white"
                android:fontFamily="@font/lato_bold"
                android:textSize="@dimen/_11ssp"

                />

        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>
</RelativeLayout>